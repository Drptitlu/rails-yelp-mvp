<br>

<div class= "container">
<p class="h1"><%= @restaurant.name %></p>
<p><strong>Adress:</strong> <%= @restaurant.address %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
</div>
<div class="container">
<p class="h2">Reviews</p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %>/5</li>
  <% end %>
</ul>
</div>
<div class= "container">
<%= link_to "index", restaurants_path, class: "btn btn-primary mt-3"%>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-3" %>
</div>
